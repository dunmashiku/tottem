{
  "name": "tottem-api",
  "private": true,
  "version": "0.0.0",
  "main": "dist/server.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn -s clean && yarn -s generate && tsc",
    "dev:typecheck": "tsc --watch --noEmit",
    "format": "npx prettier --write './**/*.{ts,md}'",
    "test": "jest",
    "start": "ts-node --transpile-only src/server.ts",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server.ts",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema/index.ts",
    "db:init": "npx prisma migrate dev --name init --preview-feature",
    "db:seed": "npx prisma db seed --preview-feature"
  },
  "dependencies": {
    "@prisma/client": "^2.18.0",
    "graphql": "^15.5.0",
    "nexus": "^1.0.0",
    "@types/cheerio": "^0.22.27",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.groupby": "^4.6.6",
    "@types/markdown-it": "12.0.1",
    "@types/node": "^14.0.1",
    "@types/node-emoji": "^1.8.1",
    "@types/node-fetch": "^2.5.8",
    "@types/spotify-web-api-node": "^5.0.1",
    "apollo-server": "^2.21.1",
    "aws-sdk": "^2.863.0",
    "cheerio": "^1.0.0-rc.5",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "graphql-middleware": "^6.0.4",
    "graphql-shield": "^7.5.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.1",
    "lodash.groupby": "^4.6.0",
    "markdown-it": "^12.0.4",
    "node-emoji": "^1.10.0",
    "node-fetch": "^2.6.1",
    "p-throttle": "^4.1.1",
    "slugify": "^1.4.7",
    "spotify-web-api-node": "^5.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "uuid-by-string": "^3.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/ws": "^7.4.0",
    "faker": "^5.4.0",
    "jest": "26.6.3",
    "pretty-quick": "^3.1.0",
    "prisma": "2.18.0",
    "ts-jest": "^26.5.3",
    "ts-lint": "^4.5.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
